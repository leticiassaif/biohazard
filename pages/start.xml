<page id="start" bg_image="bg_floresta1.jpeg" >

  <agent
    id="narrativa"
    text="continuar?"
    y="505"
    x="633"
    color="white"
    on_click="set(narrative, $narrative + 1)"
    animation="hover-grow"
  />

  <agent
    id="nome1"
    text="???"
    y="362"
    x="98"
    font-size="23"
    color="white"
    on_click="set(narrative, $narrative + 1)"
    animation="hover-glow"
  />

  <fab-if when="$narrative=0">
      <agent
      id="fala_start"
      text="$visitante… você tinha razão. Eu menti para você. Não deveria, mas -"
      color="white"
      x="70"
      y="445"
      width = "700"
      animation="typewriter"
      />
  </fab-if>


  <fab-if when="$narrative=1">
      <agent
    id="fala_start2"
    text="Tudo o que eu posso dizer é, se você receber isso…"
    color="white"
    x="70"
    y="445"
    width = "700"
    animation="typewriter"
  />
  </fab-if>

  <fab-if when="$narrative=2">
      <agent
    id="fala_start3"
    text="Fique longe."
    color="white"
    x="center"
    y="435"
    font-size="40"
    animation="fade-in"
  />

  <agent
    id="next_page_text"
    text="Começar a busca."
    y="440"
    x="50"
    font-size="25"
    color="white"
    on_click="goToPage('start3'); set(coragem, $coragem + 20)"
    animation="hover-grow"
  />

    <agent
    id="desistir1"
    text="Ficar longe."
    y="450"
    x="550"
    font-size="25"
    color="white"
    width="200"
    on_click="goToPage('ending2'); set(coragem, $coragem - 30); set(sanidade, $sanidade - 20)"
    animation="hover-grow"/>
    
  </fab-if>

</page>