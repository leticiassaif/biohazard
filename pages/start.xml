  <agent
    id="narrativa"
    text="Continuar?"
    y="40"
    x="10"
    color="black"
    on_click="set(narrative, $narrative + 1)"
    animation="pulse"
  />

  <fab-if when="$narrative=0">
      <agent
      id="fala_start"
      text="$visitante… você tinha razão. Eu menti para você. Não deveria, mas -"
      color="white"
      x="center"
      y="540"
      font-size="20"
      width = "700"
      animation="typewriter"
      />
  </fab-if>


  <fab-if when="$narrative=1">
    <agent
    id="fala_start2"
    text="Tudo o que eu posso dizer é, se você receber isso…"
    color="white"
    x="center"
    y="540"
    font-size="20"
    width = "700"
    animation="typewriter"
  />
  </fab-if>

  <fab-if when="$narrative=2">
      <agent
    id="fala_start3"
    text="Fique longe."
    color="white"
    x="center"
    y="center"
    font-size="40"
    width = "700"
    animation="typewriter"
  />

  <agent
    id="next_page_text"
    text="Começar a busca."
    y="520"
    x="30"
    font-size="25"
    color="white"
    on_click="goToPage('start2'); set(coragem, $coragem + 20)"
    animation="hover-grow"
  />

    <agent
    id="desistir1"
    text="Ficar longe."
    y="520"
    x="638"
    font-size="25"
    color="white"
    on_click="goToPage('ending2'); set(coragem, $coragem - 30); set(sanidade, $sanidade - 20)"
    animation="hover-grow"
  />
</page>
  </fab-if>

</page>