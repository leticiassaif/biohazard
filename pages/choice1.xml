<page id="choice1" bg_color="black">

  <agent
    id="next_page_text"
    text="Começar a busca."
    y="330"
    x="80"
    font-size="25"
    color="white"
    on_click="goToPage('start2'); set(coragem, $coragem + 20)"
    animation="hover-grow"
  />

    <agent
    id="desistir1"
    text="Ficar longe."
    y="330"
    x="530"
    font-size="25"
    color="white"
    width="200"
    on_click="goToPage('ending2'); set(coragem, $coragem - 30); set(sanidade, $sanidade - 20)"
    animation="hover-grow"/>

      <agent
    id="escolha"
    text="Faça uma escolha."
    y="230"
    x="250"
    font-size="30"
    color="white"
    animation="fade-in-down"
  />
  
</page>